<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:autoStart="true"
                android:flipInterval="2000">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hireme" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slogan1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slogan" />

            </ViewFlipper>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp"
                android:stretchColumns="*"
                android:weightSum="4">

                <TableRow android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/plumber"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/plumber2" />

                    <ImageButton
                        android:id="@+id/housekeeping"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/electrician" />

                    <ImageButton
                        android:id="@+id/farming"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/artist"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="center"
                        android:text="Plumbers"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Electricians"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Painter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/painter"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/driver" />

                    <ImageButton
                        android:id="@+id/word"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baker" />

                    <ImageButton
                        android:id="@+id/sentence"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cleaner" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="center"
                        android:text="Driver"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Cook"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Cleaner"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/rapier"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/constp" />

                    <ImageButton
                        android:id="@+id/Trainer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/car_repair" />

                    <ImageButton
                        android:id="@+id/Other"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/plant" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="center"
                        android:text="Bricklayer"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_gravity="center"
                        android:text="Mechanic"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Gardener"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/rapie"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/scarecrow" />

                    <ImageButton
                        android:id="@+id/Traine"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/hand_saw" />

                    <ImageButton
                        android:id="@+id/Othe"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@color/fullgray"
                        android:padding="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/recycle_sign" />
                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_gravity="center"
                        android:text="Farmer"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Carpenter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Other"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>
    </LinearLayout>
</LinearLayout>